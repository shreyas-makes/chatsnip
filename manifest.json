{
  "manifest_version": 3,
  "name": "ChatSnip",
  "version": "1.0.0",
  "description": "Export AI chat conversations as styled HTML snippets",
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatSnip"
  },
  "permissions": ["activeTab", "clipboardWrite"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 